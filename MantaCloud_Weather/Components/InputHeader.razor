@if (!string.IsNullOrEmpty(ErrorString))
{
    <p class="alert-danger errorString">@ErrorString</p>
}
@if (IsLoading)
{
    <p class="loading">Loading...</p>
}
<div class="inputHeaderSm container-fluid">
    <div class="row">
        <img class="col-12 col-lg-6" src="img/MantaRaysTitle.svg" id="headerTitle" alt="MantaRays Logo" />
        <form class="col-12 col-lg-6" @onsubmit=SetZipCode>
            <InputNumber type="number" placeholder="Enter a ZipCode" @bind-Value="zipCode" autofocus />
            <button class="mx-2 btn p-0 searchBtn">
                <i class="bi bi-binoculars-fill" style="color: var(--bs-orange);"></i>
            </button>
        </form>
    </div>

</div>


@code {
    [Parameter]
    public string? ErrorString { get; set; }
    [Parameter]
    public bool IsLoading { get; set; }
    [Parameter]
    public EventCallback<string> OnZipCodeEntered { get; set; }
    private int? zipCode = null;

    public async Task SetZipCode()
    {
        await OnZipCodeEntered.InvokeAsync(zipCode.ToString());
    }
}
